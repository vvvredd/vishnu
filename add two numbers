# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next

class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        # Dummy node to simplify the result list construction
        dummy = ListNode(0)
        current = dummy
        carry = 0
        
        # Iterate through both linked lists
        while l1 or l2 or carry:
            # Get the current values for l1 and l2 (if they exist)
            val1 = l1.val if l1 else 0
            val2 = l2.val if l2 else 0
            
            # Calculate the sum of the two digits and the carry
            total = val1 + val2 + carry
            carry = total // 10  # Update carry for the next iteration
            current.next = ListNode(total % 10)  # Create new node for the current digit
            
            # Move to the next node in the result list
            current = current.next
            
            # Move to the next nodes in l1 and l2 (if they exist)
            if l1:
                l1 = l1.next
            if l2:
                l2 = l2.next
        
        # Return the next of the dummy node, as the dummy node is just a placeholder
        return dummy.next
